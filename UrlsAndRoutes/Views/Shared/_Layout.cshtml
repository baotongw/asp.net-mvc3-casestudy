<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="title">
                <h1>My MVC Application</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <div id="menucontainer">
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("CustomVariable", "CustomVariable", "Home")</li>
                    <li>@Html.ActionLink("Test", "LALALA", new {id="baotong"})</li>
                    <li>@Html.ActionLink("Test", "LALALA","Home", new {id="baotong", @name="new variable"})</li>
                    <li>@Html.ActionLink("Attribute", "Arrtibute", "Home",null, new {id="baotong", @name="new variable", @class="bt_test"})</li>

                    <li>@Html.ActionLink("Full qualified URL", "Index", "Home",
                        "https", "myserver.mydomain.com", " myFragmentName",
                        new { id = "MyId"},
                        new { id = "myAnchorID", @class = "myCSSClass"})
                    </li>
                </ul>

            </div>
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>
</body>
</html>
